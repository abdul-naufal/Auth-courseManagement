@page
@model RazorWebApplication.Pages.Error404Model
@{
}


<section class="section">
    <div class="container-fluid mt-5">
        <div class="d-flex justify-content-center row">
            <div class="text-center">
                <h1 class="display-1">404</h1>
                <div class="page-description mb-3">
                    The page you were looking for could not be found.
                </div>
                <div class="row">
                    <form>
                        <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2">

                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" class="form-control shadow-none" placeholder="search" aria-label="search" aria-describedby="basic-addon1">
                                <button class="btn btn-outline-secondary" type="button">Search</button>
                            </div>
                        </div>
                    </form>
                    <div class="mt-2">
                        <a asp-page="/Index" class="text-primary">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>