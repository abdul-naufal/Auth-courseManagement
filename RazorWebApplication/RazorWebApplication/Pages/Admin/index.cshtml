@page
@model RazorWebApplication.Pages.Admin.IndexModel


    <section class="section">
        <div class="row mt-3 mb-5 align-items-center">
            <div class="col-lg-10 col-md-10">
                <div class="px-3 m-0">
                    <h3 class="m-0">Instructor</h3>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 bg-light rounded-1">
                            <li class="breadcrumb-item"><a>Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Instructor</li>
                        </ol>
                    </nav>
                    <!-- Breadcrumb -->
                </div>
            </div>
            <div class="col-lg-2 col-md-2 align-items-center">
                <div class="btn-group dropstart pull-right mt-1">
                    <a class="text-secondary" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item has-icon">
                                <i class="bi bi-download"></i> Download Report
                            </a>
                        </li>
                    </ul>
                </div>
                <a class="btn btn-dark pull-right me-2 fw-lighter" asp-area="Identity" asp-page="/Account/Register">
                    <i class="bi bi-plus-lg"></i> &nbsp;Create Instructor
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card border-0">
                    <div class="card-header bg-transparent border-bottom border-opacity-25 border-1">
                        <h4>Instructor</h4>
                    </div>
                    <div class="card-body">
                        <div class="row bg-light-gray rounded-1 mb-3 pt-3">
                            <div class="col-lg-12 col-md-12">
                                <div class="row">
                                    <div class="form-group col-lg-2 col-md-3 mb-3">
                                        <label for="InstructorID">ID</label>
                                        <input type="text" name="InstructorID" class="form-control" id="InstructorID">
                                    </div>

                                    <div class="form-group col-lg-3 col-md-4 mb-3">
                                        <label for="InstructorName">Name</label>
                                        <input type="text" name="InstructorName" class="form-control" id="InstructorName">
                                    </div>
                                    <div class="form-group col-lg-3 col-md-4 mb-3">
                                        <label for="InstructorEmail">Email</label>
                                        <input type="text" name="InstructorEmail" class="form-control" id="InstructorEmail">
                                    </div>

                                    <div class="col-lg-2 col-md-2 mt-3">
                                        <button class="mt-1 btn btn-light" id="searchButton" name="searchButton">Search</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr id="InstructorHeading">
                                        <th class="text-center pt-3">
                                            <div class="custom-checkbox custom-checkbox-table custom-control">
                                                <input type="checkbox"
                                                       class="custom-control-input" id="instructor-select-all">
                                                <label for="instructor-select-all" class="custom-control-label">&nbsp;</label>
                                            </div>
                                        </th>
                                        <th class="min-width-50">Instructor ID</th>
                                        <th class="min-width-200">Name</th>
                                        <th class="min-width-100">Email</th>
                                        <th class="min-width-100">Phone</th>
                                        <th class="min-width-100">Action</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="instructorList">
                                    @foreach (var obj in Model.Instructors)
                                    {
                                        <tr>
                                            <td class="text-center pt-2">
                                                <div class="custom-checkbox custom-control">
                                                    <input type="checkbox" class="custom-control-input">
                                                    <label class="custom-control-label">&nbsp;</label>
                                                </div>
                                            </td>
                                            <td class="min-width-50">@obj.Id</td>
                                            <td class="min-width-200">
                                                @if (@obj.ImageUrl != null || @obj.ImageUrl != "")
                                                {
                                                    <img src="@obj.ImageUrl" width="35" alt="@obj.ImageUrl">
                                                }
                                                else
                                                {
                                                    <img src="~/images/users/default-user.png" width="35" alt="user-default" />
                                                }
                                                <a class="text-secondary fs-6">@obj.FirstName  @obj.LastName</a>
                                            </td>
                                            <td class="min-width-100">@obj.Email</td>
                                            <td class="min-width-100">@obj.PhoneNumber</td>
                                            <td class="min-width-100">

                                                <a class="text-primary fs-5 p-r-5" style="--bs-text-opacity: .8;"> <i class="bi bi-pencil-square"></i></a>
                                                <a class="text-danger fs-5"> <i class="bi bi-trash3"></i></a>
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-secondary px-3 py-1">Detail</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                        @if (@Model.Instructors.Count() <= 0)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                </symbol>
                            </svg>

                            <div class="row mx-1">
                                <div class="alert alert-warning d-flex align-items-center" role="alert">
                                    <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Warning:" width="25px" height="25px">
                                        <use xlink:href="#exclamation-triangle-fill" />
                                    </svg>
                                    <div>
                                        No Instructor available
                                    </div>
                                </div>
                            </div>
                            
                        }
                        else
                        {
                            <div class="row mt-3">
                                <div class="col-sm-12 col-md-5">
                                    <div class="" id="showTableDataCount">
                                        &nbsp;&nbsp;Showing @((Model.CurrentPage - 1) * (Model.PageSize) + 1) to @(Model.EndIndex)
                                        of @Model.Count entries
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-7">
                                    <div class="pull-right" id="paginationList">
                                        <ul class="pagination pagination-sm">
                                            <li class="page-item @(!Model.ShowFirst? " disabled":"")">
                                                <a asp-page="/Admin/Index" asp-route-CurrentPage="1" class="page-link">
                                                    <span aria-hidden="true">&laquo;&laquo;</span>
                                                    <span class="sr-only">First</span>
                                                </a>
                                            </li>

                                            <li class="page-item @(!Model.ShowPrevious? " disabled":"")">
                                                <a asp-page="/Admin/Index" asp-route-CurrentPage="@(Model.CurrentPage -1)" class="page-link" aria-label="Previous" tabindex="-1">
                                                    <span aria-hidden="true">&laquo;</span>
                                                    <span class="sr-only">Previous</span>
                                                </a>
                                            </li>
                                            <li class="page-item  @(!Model.ShowNext? " disabled":"")">
                                                <a asp-page="/Admin/Index" asp-route-CurrentPage="@(Model.CurrentPage + 1)" class="page-link">
                                                    <span aria-hidden="true">&raquo;</span>
                                                    <span class="sr-only">Next</span>
                                                </a>
                                            </li>

                                            <li class="page-item  @(!Model.ShowLast? " disabled":"")">
                                                <a asp-page="/Admin/Index" asp-route-CurrentPage="@Model.TotalPages" class="page-link">
                                                    <span aria-hidden="true">&raquo;&raquo;</span>
                                                    <span class="sr-only">Last</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col text-center mt-2">
                <button class="btn btn-danger" id="deleteSelected">Delete Selected</button>
            </div>
        </div>
    </section>

